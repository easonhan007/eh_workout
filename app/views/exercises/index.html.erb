<div class="row">
  <div class="col-md-8">
    <div class="row my-2">
      <div class="col-4 col-md-2">
        <h3>Exercises</h3>
      </div>
      <div class="col">
        <%= link_to "New", new_exercise_path, class: 'btn btn-primary' %>
      </div>
    </div>


    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% @exercises.each do |exercise| %>
        <div class="col">
          <div class="card h-100" href="<%= exercise_path(exercise)%>">
            <%image_src = exercise.image.blank? ? default_img : exercise.image%>
            <img class="card-img-top" src="<%= image_src %>" alt="<%= exercise.name %>">
            <div class="card-body">
              <h5 class="card-title"><%= exercise.name %></h5>
              <div class="card-text">
                <p><%= exercise.body_part.name%></p>
                <p><%= exercise.category.name%></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="row my-4">
      <%== pagy_bootstrap_nav(@pagy) %>
    </div>
  </div>
</div>

<script>
  var cards = document.querySelectorAll('.card')
  cards.forEach(function(card) {
    card.addEventListener('click', function(){
      url = card.getAttribute('href');
      window.location = url;
    })
  })
</script>