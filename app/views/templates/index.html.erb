<div class="row">

  <div class="col-md-8">
    <div class="row my-4">
      <div class="col"> <h3>Templates</h3> </div>
      <div class="col"> <%= link_to "New template", new_template_path, class: 'btn btn-outline-primary'%> </div>
    </div>

    <% unless @user_templates.blank?%>
      <div class="mb-4">
        <h5>My Template</h5>
        <div id="my_templates" class="row row-cols-1 row-cols-md-3 g-4">
          <% @user_templates.each do |template| %>
            <div class="col">
              <%= render template %>
            </div>
          <% end %>
        </div>
      </div>
    <% else %>
      <p>No templates yet, click <%= link_to 'here', new_template_path%> to create one </p>
    <% end %>

    <div class="mb-4">
      <h5>System Templates</h5>
      <div id="system_templates" class="row row-cols-1 row-cols-md-3 g-4">
        <% @system_templates.each do |template| %>
          <div class="col">
            <%= render template %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="my-4">
      <%== pagy_bootstrap_nav(@pagy) %>
    </div>
  </div>

</div>


