<%= turbo_frame_tag "duration" do %>
    <%= form_with(model: record) do |f| %>
        <div class="row mb-2">
            <div class="col-auto">
                <%= f.label(:duration, class: 'col-form-label') %>
            </div>
            <div class="col-auto">
                <%= f.number_field(:duration, class: 'form-control', min: 1)%>
            </div>
            <div class="col-auto">
                <%= f.submit(class: 'btn btn-outline-success', value: 'Save')%>
            </div>
        </div>
    <% end %>
<% end #turbo%>
